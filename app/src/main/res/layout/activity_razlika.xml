<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mojca.ca.tarockfinal.Razlika">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/group_igralec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <RadioButton
                android:id="@+id/igr1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:checked="false" />

            <RadioButton
                android:layout_margin="7dp"
                android:id="@+id/igr2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white" />


            <RadioButton
                android:id="@+id/igr3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>

            <RadioButton
                android:id="@+id/igr4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>


        </RadioGroup>

        <RadioGroup
            android:id="@+id/group_soigralec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/soigr1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>

            <RadioButton
                android:id="@+id/soigr2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>


            <RadioButton
                android:id="@+id/soigr3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>


            <RadioButton
                android:id="@+id/soigr4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selected"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="7dp"/>


        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/l5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/left" />

                <ImageButton
                    android:id="@+id/l10"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/double_left" />

                <CheckBox
                    android:id="@+id/razlika"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/slected2"
                    android:button="@null"
                    android:gravity="center"
                    android:text="0"
                    android:typeface="serif"
                    />




                <ImageButton
                    android:id="@+id/r10"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/double_right" />


                <ImageButton
                    android:id="@+id/r5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp">


            <Button
                android:id="@+id/napovedi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_igralec"
                android:text="@string/napovedi"
                android:typeface="serif" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/arrow_left" />

            <ImageButton
                android:id="@+id/forward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/arrow_right" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
